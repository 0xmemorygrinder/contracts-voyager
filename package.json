{
  "name": "contracts-voyager",
  "displayName": "Contracts Voyager",
  "publisher": "0xmemorygrinder",
  "description": "",
  "version": "0.1.0",
  "icon": "./assets/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/0xmemorygrinder/contracts-voyager"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "browser": "./dist/web/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "contracts-voyager.openContract",
        "title": "Contracts voyager: Open contract"
      }
    ],
    "configuration": {
      "title": "Contracts Voyager",
      "properties": {
        "contracts-voyager.ethereumRpc": {
          "type": "string",
          "description": "The URL of the Ethereum Mainnet RPC endpoint",
          "default": "https://cloudflare-eth.com"
        }
      }
    },
    "languages": [
      {
        "id": "solidity",
        "aliases": [
          "Solidity",
          "solidity"
        ],
        "extensions": [
          ".sol"
        ],
        "configuration": "./assets/configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "solidity",
        "scopeName": "source.solidity",
        "path": "./assets/syntax.json",
        "balancedBracketScopes": [
          "*"
        ],
        "unbalancedBracketScopes": [
          "meta.scope.case-pattern.solidity"
        ]
      }
    ]
  },
  "scripts": {
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
    "pretest": "pnpm run compile-web",
    "vscode:prepublish": "pnpm run package-web",
    "compile-web": "webpack",
    "watch-web": "webpack --watch",
    "package-web": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
  },
  "devDependencies": {
    "@types/assert": "^1.5.10",
    "@types/mocha": "^10.0.6",
    "@types/vscode": "^1.75.0",
    "@types/webpack-env": "^1.18.4",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-web": "^0.0.50",
    "assert": "^2.1.0",
    "eslint": "^8.56.0",
    "mocha": "^10.2.0",
    "process": "^0.11.10",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "buffer": "^6.0.3",
    "https-browserify": "^1.0.0",
    "path-browserify": "^1.0.1",
    "solc": "^0.8.25",
    "solidity-ast": "^0.4.56",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "url": "^0.11.3",
    "viem": "^2.10.9"
  }
}
